# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.java]
indent_size = 4

[*.gradle]
indent_size = 4

[*.xml]
indent_size = 2

[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.ts]
indent_size = 2

[*.yml]
indent_size = 2

# Terraform files
[*.tf]
indent_size = 2